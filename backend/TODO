query {
    user {
        pendingFriendRequests: [User]
    }
    guild {
        pendingRequests: [User]
    }
}

mutation {
    user {
        login(id: ID, forumId: Int, username: String, phone: String, password: String!): Boolean!
        register(username:String!, phone:String!, smscode:Int!): User!
        resetPassword(phone:String!, smscode:String!, password:String!): Boolean!
        requestSmsCode(phone: String!): Boolean!
        update(userId: ID) {
            bio(text: String!): Boolean!
            bindForum(forumUid: ID!, forumPassword: String!): Boolean!
        }
    }

    friend {
        request(id: ID!): Boolean!
        remove(id: ID!): Boolean!
        block(id: ID!): Boolean!
        unblock(id: ID!): Boolean!
    }

    guild {
        create(name: String!, slogan: String!, totem: String): Guild!
        transfer(guildId: ID!, to: ID!): Guild!
        join(guildId: ID!): Boolean!
        approve(requestId: ID!): Boolean!
        kick(userId: ID!): Boolean!
        quit: Boolean!
        update(guildId: ID!) {
            slogan(text: String!): Boolean!
            totem(url: String): Boolean!
        }
    }

    item {
        add(to: ID!, type: String!): Item!
        remove(id: ID!): Boolean!
    }

    exchange {
        buy(exchangeItemId: ID!): Boolean!
        sell(itemId: ID!, price: Float!): ExchangeItem!
        cancelSell(exchangeItemId: ID!): Boolean!
    }

    unlock {
        addUnlock(userId: ID!, item: String!): Boolean!
        addAchievement(userId: ID!, achievement: String!): Boolean!
    }

    system {
        nextGameId: Int!
    }
}
